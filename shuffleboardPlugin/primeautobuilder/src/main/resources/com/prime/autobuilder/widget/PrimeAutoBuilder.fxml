<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.prime.autobuilder.widget.PrimeAutoBuilderWidget"
      fx:id="root"
      minWidth="64" minHeight="384"
      spacing="4">
    <padding>
        <!-- Keep a 4 pixel buffer around the widget to avoid it from feeling cramped -->
        <Insets topRightBottomLeft="4"/>
    </padding>
    
    <!-- Title -->
    <Label text="Auto Routine Builder" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Step Selection -->
    <HBox spacing="5">
        <Label text="Next Step:"/>
        <ComboBox fx:id="stepSelector" prefWidth="200"/>
        <Button fx:id="addStepButton" text="Add"/>
    </HBox>

    <!-- Routine Steps List -->
    <Label text="Routine Steps:"/>
    <ListView fx:id="stepsListView" prefHeight="232"/>

    <!-- Action Buttons -->
    <HBox spacing="5">
        <Button fx:id="removeStepButton" text="Remove Last Step"/>
        <Button fx:id="clearButton" text="Clear Routine"/>
    </HBox>

</VBox>
